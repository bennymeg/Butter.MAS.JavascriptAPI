{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2015",
        "typeRoots": ["node_modules/@types"],
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "moduleResolution": "Node",
        "preserveConstEnums": true,
        "outDir": "build",
        "sourceMap": true,
        "lib": ["es2015", "DOM"],
        "baseUrl": ".",
        "rootDir": "."
    },
    "typedocOptions": {
        "out": "docs",
        "name": "Butter MAS Javascript API Documentation"
    },
    "include": [
        "butter/mas/**/*"
    ],
    "exclude": [
        "build",
        "node_modules",
        "**/*.spec.ts"
    ]
}